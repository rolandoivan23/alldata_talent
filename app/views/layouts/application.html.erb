<!DOCTYPE html>
<html>
  <head>
    <title>AlldataTalent</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<% unless controller.controller_name.start_with?('registrations') ||
controller.controller_name.start_with?('sessions') %>
  <body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark" style="background-color: #14477e !important">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="index.html"> <%= image_tag 'logo.png', style: 'max-width: 195px;' %> </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
              <%= form_with url: "/find_results", method: :post do |form| %>
                <%= form.text_field :query, class: 'form-control', placeholder: 'Search for' %>          
              <% end %>
      
            </div>
        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/user_skills"><i class="fas fa-star"></i> My Skills</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                      <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                        <i class="fas fa-right-from-bracket"></i>
                        Logout
                      <% end %>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
          <div class="sb-sidenav-menu">
              <div class="nav">
                  <div class="sb-sidenav-menu-heading">Core</div>
                  <a class="nav-link" href="/users">
                      <div class="sb-nav-link-icon"><i class="fas fa-user-alt"></i></div>
                      Users
                  </a>
                  <a class="nav-link" href="/skills">
                      <div class="sb-nav-link-icon"><i class="fas fa-star"></i></div>
                      Skills
                  </a>
                  <a class="nav-link" href="/tests">
                      <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                      Tests
                  </a>
                  <a class="nav-link" href="/posts">
                      <div class="sb-nav-link-icon"><i class="fa-solid fa-paste"></i></div>
                      Posts
                  </a>
              </div>
          </div>
        </nav>
    </div>
    <div id="layoutSidenav_content" style="margin-top: 25px;">
      <main>
        <div class="container-fluid px-4">
<% end %>
          <%= yield %>
<% unless controller.controller_name.start_with?('registrations') ||
  controller.controller_name.start_with?('sessions') %>
        </div>
      </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
  </body>
<% end %>

</html>
