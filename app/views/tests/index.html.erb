<p id="notice"><%= notice %></p>

<h3>Tests</h3>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Total points</th>
      <th scope="col">Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <th scope="row"><%= test.name %></th>
        <td><%= test.description %></td>
        <td><%= test.total_points %></td>
        <td><%= test.skill_id %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="float-right d-inline">
  <%= link_to 'New Test', new_test_path, :class => 'btn btn-dark ', :style => 'color: #FFFFFF' %>
</div>
